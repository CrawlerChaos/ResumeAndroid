<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <ImageView
            android:id="@+id/iv_back"
            style="@style/BackStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:text="设置新密码"
            android:textColor="@color/text_black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back"/>


    <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="+86 18501640000"/>

    <EditText
            android:id="@+id/et_old_password"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/retangle_round_conner_bf_f6"
            android:gravity="center_vertical"
            android:hint="输入旧密码"
            android:imeOptions="actionDone"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_phone"/>

    <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/retangle_round_conner_bf_f6"
            android:gravity="center_vertical"
            android:hint="输入新密码"
            android:imeOptions="actionDone"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_old_password"/>

    <EditText
            android:id="@+id/et_password_confirm"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/retangle_round_conner_bf_f6"
            android:gravity="center_vertical"
            android:hint="再次输入新密码"
            android:imeOptions="actionDone"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_grey"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_new_password"/>

    <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="24dp"
            style="@style/ConfirmButtonRoundStyle"
            android:layout_width="0dp"
            android:text="确定"
            app:layout_constraintEnd_toEndOf="@id/et_password_confirm"
            app:layout_constraintStart_toStartOf="@id/et_password_confirm"
            app:layout_constraintTop_toBottomOf="@id/et_password_confirm"/>
</androidx.constraintlayout.widget.ConstraintLayout>

